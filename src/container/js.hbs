{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  <div>
    <h1 class="mb-5"><em>{{name}}</em></h1>
    <hr>
    <ul>
      <div>{{name}}</div>
      <div class="mb-4">{{description}}</div>
      <hr>

      <div class="mb-4">
        <h3><em>History:</em></h3>
        {{#with history}}
          <ul>
            <li>
              <div>{{year}}</div>
              <div>{{founder}}</div>
            </li>
          </ul>
        {{/with}}
      </div>
      <hr>

      <div class="mb-4">
        <h3><em>Types:</em></h3>
        {{#each types }}
          <ul>
            <li>
              <div class="badge text-bg-light">{{this}}</div>
            </li>
          </ul>
        {{/each}}
      </div><hr>

      <div class="mb-5">
        <h3 class="mb-4"><em>Syntax:</em></h3>
      
        {{#with syntax}}
          <ul >
            <div class="mb-4">
              <h4><em>Variables:</em></h4>
              {{#each variables}}
                <ul>
                  <li>
                    <div class="badge text-bg-light">{{this}}</div>
                  </li>
                </ul>
              {{/each}}
            </div>

            <div class="mb-4">
              <h4><em>Functions:</em></h4>
              {{#each functions}}
                <ul>
                  <li>
                    <div class="badge text-bg-light">{{this}}</div>
                  </li>
                </ul>
              {{/each}}
            </div>

            <div class="mb-4">
              <h4><em>Conditionals:</em></h4>
              {{#each conditionals}}
                <ul>
                  <li>
                    <div class="badge text-bg-light">{{this}}</div>
                  </li>
                </ul>
              {{/each}}
            </div>

            <div class="mb-4">
              <h4><em>Loops:</em></h4>
              {{#each loops}}
                <ul>
                  <li>
                    <div class="badge text-bg-light">{{this}}</div>
                  </li>
                </ul>
              {{/each}}
            </div>

            <div>
              <h4><em>Classes:</em></h4>
              {{#each classes}}
                <ul>
                  <li>
                    <div class="badge text-bg-light">{{this}}</div>
                  </li>
                </ul>
              {{/each}}
            </div>
          </ul>
        {{/with}}
      </div> <hr>

      <div class="mb-4">
        <h4><em>Features:</em></h4>
        {{#each features}}
          <ul>
            <li>
              <div class="badge text-bg-light">{{this}}</div>
            </li>
          </ul>
        {{/each}}
      </div>

      <div class="mb-4">
        <h4><em>Libraries:</em></h4>
        {{#each libraries}}
          <ul>
            <li>
              <div class="badge text-bg-light">{{this}}</div>
            </li>
          </ul>
        {{/each}}
      </div>

      <div class="mb-4">
        <h4><em>Tools:</em></h4>
        {{#each tools}}
          <ul>
            <li>
              <div class="badge text-bg-light">{{this}}</div>
            </li>
          </ul>
        {{/each}}
      </div>

      <div>
        <h4><em>Community:</em></h4>
        {{#with community}}
          <div class="mb-4">
            {{#with [0]}}
              <ul>
                <li>
                  <div>{{name}}</div>
                  <div>{{type}}</div>
                </li>
              </ul>
            {{/with}}
          </div>

          <div class="mb-4">
            {{#with [1]}}
              <ul>
                <li>
                  <div>{{name}}</div>
                  <div>{{type}}</div>
                </li>
              </ul>
            {{/with}}
          </div>

          <div class="mb-4">
            {{#with [2]}}
              <ul>
                <li>
                  <div>{{name}}</div>
                  <div>{{type}}</div>
                </li>
              </ul>
            {{/with}}
          </div>

          <div>
            {{#with [3]}}
              <ul>
                <li>
                  <div>{{name}}</div>
                  <div>{{type}}</div>
                </li>
              </ul>
            {{/with}}
          </div>
        {{/with}}
      </div>
    </ul>
  </div>
</div>

