
<div class="badge rounded-pill text-bg-dark"><h1>{{make}} / {{model}} / {{year}} / {{color}}</h1></div>
<br> <br> <hr>

<div>
  <ul>
    {{#with features}}
      <div class="mb-4">
        {{#with interior}}
          <div class="mb-4">
            <div class="mb-4">
              <h4><em>Seats</em></h4>
              {{#with seats}}
                <ul>
                  <li>
                    <div>{{material}}</div>
                    <div>{{color}}</div>

                    {{#if heated}}
                      <div>{{heated}}</div>
                    {{/if}}

                    {{#if ventilated}}
                      <div>{{ventilated}}</div>
                    {{/if}}
                    
                  </li>
                </ul>
              {{/with}}
            </div>
            <hr>
            
            <div class="mb-5">
              <h4><em>Dashboard</em></h4>
              {{#with dashboard}}
                <ul>
                  <li class="mb-3">
                    <div>{{material}} / {{color}}</div>
                  </li>

                  <div class="mb-4">
                    <h5><em class="badge rounded-pill text-bg-light">Display</em></h5>
                    {{#with display}}
                      <ul>
                        <li>
                          <div>
                            {{type}} / {{size}} / {{resolution}} / {{#if touchscreen}} {{touchscreen}} {{/if}}
                          </div>
                        </li>
                      </ul>
                    {{/with}}
                  </div>
                </ul>
              {{/with}}
            </div> <hr>

            <div class="mb-4">
              <h4><em>Audio:</em></h4>
              {{#with audio}}
              <ul>
                <li>
                  <div>
                    {{system}} / {{speakers}} / 
                    {{#if subwoofer}}
                      {{subwoofer}} /
                    {{/if}} 

                    {{#if bluetooth}}
                      {{bluetooth}} /
                    {{/if}}

                    {{#if USB}}
                      {{USB}} / 
                    {{/if}}
                  </div>
                </li>
              </ul>
              {{/with}}
            </div>
          </div>
          <hr>
        {{/with}}

        <div class="mb-5">
          <h4 class="mb-4"><em>Exterior:</em></h4>
          
          {{#with exterior}}
            <div class="mb-4">
              {{#with wheels}}
                <ul>
                  <h5><em class="badge rounded-pill text-bg-light">Wheels:</em></h5>
                  <ul>
                    <li>
                      <div>{{size}} / {{type}} / {{color}}</div>
                    </li>
                  </ul>
                </ul>
              {{/with}}
            </div>

            <div class="mb-4">
              {{#with headlights}}
                <ul>
                  <h5><em class="badge rounded-pill text-bg-light">Headlights:</em></h5>
                  <ul>
                    <li>
                      <div>{{type}} / {{brightness}} /
                        {{#if automatic}}
                          {{automatic}} /
                        {{/if}}
                      </div>
                    </li>
                  </ul>
                </ul>
              {{/with}}
            </div>

            <div class="mb-4">
              {{#with sunroof}}
                <ul>
                  <h4><em class="badge rounded-pill text-bg-light">Sunroof:</em></h4>
                  <ul>
                    <li>
                      <div>{{type}} / {{size}} /
                        {{#if automatic}}
                          {{automatic}} /
                        {{/if}}
                      </div>
                    </li>
                  </ul>
                </ul>
              {{/with}}
            </div>
          {{/with}}
        </div>
        <hr>

        <div>
          <h3 class="mb-4"><em>Safety:</em></h3>
          
          {{#with safety}}
            <div class="mb-4">
              <ul>
                <h5><em class="badge rounded-pill text-bg-light">Airbags:</em></h5>
                {{#with airbags}}
                <ul>
                  <li>
                    <div>{{front}} / {{side}} / {{knee}} / {{rear}}</div>
                  </li>
                </ul>
                {{/with}}
              </ul>
            </div>

            <div>
              <ul>
                <h5><em class="badge rounded-pill text-bg-light">Assistance:</em></h5>
                {{#with assistance}}
                  <ul>
                    <li>
                      <div>
                        {{#if blind_spot_monitoring}}
                          {{blind_spot_monitoring}} / 
                        {{/if}}

                        {{#if rear_cross_traffic_alert}}
                          {{rear_cross_traffic_alert}} /
                        {{/if}}

                        {{#if lane_departure_warning}}
                          {{lane_departure_warning}} /
                        {{/if}}

                        {{#if adaptive_cruise_control}}
                          {{adaptive_cruise_control}} /
                        {{/if}}

                        {{#if collision_warning}}
                          {{collision_warning}}
                        {{/if}}
                      </div>
                    </li>
                  </ul>
                {{/with}}
              </ul>
            </div>
          {{/with}}
        </div>
      </div> <hr>
    {{/with}}

    <div>
      <h4 class="mb-4"><em>Engine:</em></h4>
      
      {{#with engine}}
        <ul>
          <li class="mb-3">
            <divs>{{type}} / {{displacement}} / {{horsepower}} / {{torque}}</divs>
          </li>

          <div class="mb-4">
            <h5><em class="badge rounded-pill text-bg-light">Transmission:</em></h5>
            {{#with transmission}}
              <ul>
                <li>
                  <div>{{type}} / {{gears}}</div>
                </li>
              </ul>
            {{/with}}
          </div>
        </ul>
      {{/with}}
    </div> <hr>

    <div class="mb-4">
      <h4><em>Fuel economy:</em></h4>
      {{#with fuel_economy}}
      <ul>
        <li>
          <div>{{city}} / {{highway}} / {{combined}}</div>
        </li>
      </ul>
    {{/with}}
    </div><hr>

    <div>
      <h2><em class="badge rounded-pill text-bg-dark">Price:</em></h2>
      {{#with price}}
        <ul>
          <li class="mb-3">
            <div>{{base}} / {{destination}}</div>
          </li>

          <div class="mb-4">
            <h5><em class="badge rounded-pill text-bg-light">Options:</em></h5>
            {{#with options}}
              <ul>
                <li>
                  <div>{{navigation}} / {{moonroof}} / {{premium_paint}}</div>
                </li>
              </ul>
            {{/with}}
          </div> <hr>

          <div class="mb-4">
            <h4><em class="badge rounded-pill text-bg-dark">Total:</em></h4>
            <ul>
              <li>
                <div><strong>{{total}}</strong></div>
              </li>
            </ul>
          </div>
          
          <hr>
        </ul>
      {{/with}}
    </div>
  </ul>
</div>
