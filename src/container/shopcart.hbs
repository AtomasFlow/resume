<main>
  {{!--========== navigation ========== --}}
  {{> shopheader data=navigation}}

  {{!--========== header ========== --}}

  {{#with header}}
  <div class="mb-4">
    <h1 class="mb-3">{{title}}</h1>
    {{#with button}}
    <a class="btn btn-outline-secondary mb-4" href="{{link}}">{{text}}</a>
    {{/with}}
    <hr>
  </div>
  {{/with}}


{{!--========== goodsBlock ========== --}}

  {{#each goodsBlock}}
  {{> cartGoodsitem}}
  {{/each}}
  <hr>

{{!--========== total ========== --}}

  {{#with total}}
  <div class="my-5">
    <h3>{{title}}</h3>
    <h2 class="mt-3">{{amount}}</h2>
    <p>{{delivery}}</p>
    {{#each buttons}}
    <div class="mb-3">
      <a class="btn {{#if isSuccess}} btn-success {{/if}}
        {{#if isOutline}} btn-outline-success {{/if}}" href="{{link}}">{{text}}</a>
    </div>
    {{/each}}
  </div>
  {{/with}}
  <hr>

{{!--========== goodsOtherBlock ========== --}}

<div class="row my-5">{{> shopcard data=goodsOtherBlock}}</div>
<hr>


{{!--========== subscribe ========== --}}

{{#with subscribe}}
<div class="card my-5 bg-dark text-light">
  <div class="card-body pb-0">
    <h2>{{header}}</h2>
    <p class="card-text">{{description}}</p>

    {{#each buttons}}
    <div class="mb-3 {{#if @last}} mb-0 {{/if}}">
      <a class="btn btn-primary" href="{{link}}">{{text}}</a>
    </div>
    {{/each}}
  </div>
</div>
{{/with}}
<hr>


{{!--========== footer ========== --}}

{{> shopfooter}}




</main>