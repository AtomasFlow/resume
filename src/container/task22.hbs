<main>
  {{#with page_header}}
    <section class="text-center">
      <h1>{{title}}</h1>
      <p>{{description}}</p>
    </section>
  {{/with}}

  {{#with section}}
    {{#with about_us}}
      <section class="card">
        <div class="card-body">
          {{#with title_list}}
          <div class="display-6 text-end">{{sub}}</div>
          <h2 class="text-end">{{main}}</h2>
          {{/with}}

          {{#with button}}
          <div><button class="btn btn-outline-info">{{text}}</button></div>
          {{/with}}
        </div>
      </section>
    {{/with}}
    <br>

    {{#with advantage}}
      <section class="card mb-4">
        <div class="card-body">
          <div class="display-5 mb-4">{{title}}</div>

          {{#with efficiency}}
            <section class="card mb-4">
              <div class="card-body">
                <div class="display-4 mb-4">{{title}}</div>

                <h6>{{sub_title}}</h6>
                <p>{{description}}</p>
                <div>
                  <button class="btn btn-outline-warning">{{button}}</button>
                </div>
              </div>
            </section>
          {{/with}}


          {{#with innovation}}
            <section class="card mb-4">
              <div class="card-body">
                <div class="text-center mb-4">
                  <div class="display-4 mb-4">{{title}}</div>

                  <h6>{{sub_title}}</h6>
                  <p>{{description}}</p>
                </div> 
                <div><button class="btn btn-outline-warning">{{button}}</button></div>
              </div>
            </section>
          {{/with}}


          {{#with collaboration}}
            <section class="card">
              <div class="card-body">
                <div class="text-end mb-3">
                  <div class="display-4">{{title}}</div>
                  <br>
                  <h6>{{sub_title}}</h6>
                  <p>{{description}}</p>
                </div>
                <div><button class="btn btn-outline-warning">{{button}}</button></div>
              </div>
            </section>
          {{/with}}
        </div>
      </section>
    {{/with}}


    {{#with agreement}}
      <section class="card">
        <div class="card-body">
          <div class="display-5 mb-4">{{title}}</div>

          {{#with info}}
            <div class="card">
              <div class="card-body">
                <h5 class="mb-4">{{sub_title}}</h5>

                {{#with detail}}
                  <div class="card">
                    <div class="card-body">
                      <p>{{text}}</p>
                      <div>
                        <button class="btn btn-success">{{button}}</button>
                      </div>
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
      </section>
    {{/with}}
  {{/with}}
</main>