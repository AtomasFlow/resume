{{#with heading}}
  <div class="card">

    {{#with main}}
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <h1>{{title}}</h1>
            <p>{{text}}</p>
            {{#with button_text}}
              <button class="btn btn-primary">{{solid}}</button>
              <br> <br>
              <button class="btn btn-outline-primary">{{outline}}</button>
            {{/with}}
          </div>
        </div>
      </div>
    {{/with}}

    {{#with second}}
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <h2>{{title}}</h2>
            <p>{{text}}</p>
            {{#with button_text}}
              <button class="btn btn-secondary">{{solid}}</button>
              <br> <br>
              <button class="btn btn-outline-secondary">{{outline}}</button>
            {{/with}}
          </div>
        </div>
      </div>
    {{/with}}

    {{#with subblock}}
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{text}}</p>
            {{#with button_text}}
            <button class="btn btn-dark">{{solid}}</button>
            <br> <br>
            <button class="btn btn-outline-dark">{{outline}}</button>
            {{/with}}
          </div>
        </div>
      </div>
    {{/with}}
  </div>
{{/with}}
<br> <br>

{{#with nested_display}}
  <div class="card">
    <div class="display-1">{{title}}</div>

    {{#with children_display}}
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <div class="display-4">{{title}}</div>
            <p>{{text}}</p>
            {{#with button}}
              <button class="btn btn-outline-warning">{{text}}</button>
            {{/with}}
          </div>
        </div>
      </div>
    {{/with}}
    
    <div>
      <h6>{{header_text}}</h6>
      {{#with button}}
        <button class="btn btn-info">{{text}}</button>
      {{/with}}
    </div>
    <br>
  </div>
{{/with}}
<br><br>

{{#with paragraph}}
  <div class="card">
    <p class="display-5">{{title}}</p>
    <p>{{text}}</p>

    {{#with button}}
      <div>
        <a href="{{url}}" class="btn text-primary">{{text}}</a>
      </div>
    {{/with}}

    {{#with list_name}}
      <div class="card-body">
        <div class="card">
          <div class="card-body">
            <ul>
              {{#with [0]}}
                <li>
                  <a href="{{url}}" class="btn text-primary">{{text}}</a>
                </li>
              {{/with}}
              
              {{#with [1]}}
                <li>
                  <a href="{{url}}" class="btn text-primary">{{text}}</a>
                </li>
              {{/with}}
            </ul>
          </div>
        </div>
      </div>
    {{/with}}
  </div>
{{/with}}
<br><br>

