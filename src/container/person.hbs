<div>
  {{#with person}}
    <div class="mb-4">
      <h1>{{name}}</h1>
      <div> <em>Age:</em> {{age}}</div> <br>
      <div> <em>Gender:</em> {{gender}}</div>
      <hr>
    </div>

    <div class="mb-4">
      <h3><em>Address:</em></h3>
      <div>
        <address>
          <ul>
            <li class="text-capitalize">
              {{#each address}}
              <div>
                {{@key}}: {{this}}
              </div>
              {{/each}}
            </li>
          </ul>
        </address>
        <hr>
      </div>
    </div>

    <div class="mb-4">
      <h3><em>Education:</em></h3>
      <ul>
        <li>
          {{#each education.[0]}}
          <div>
            <span class="text-capitalize">{{@key}}:</span> {{this}}
          </div>
          {{/each}}
        </li>
      </ul>
      <hr>
    </div>

    <div>
      {{#with workExperience}}
        <h3><em>Work experience:</em></h3>
        <div>
          {{#with [0]}}
            <ul>
              <li class="mb-4">
                <div>{{company}}</div>
                <div>{{title}}</div>
                <div>From {{startDate}} to {{endDate}}</div>
                <div>{{responsibilities}}</div>
                <div>Year founded: {{year_founded}}</div>
                <div>Industry: {{industry}}</div>
              </li>
              <hr>

              <div>
                <h4><em>Emploeyes:</em></h4>
                {{#with employees.[0]}}
                  <ul>
                    <li class="mb-4">
                      <div>{{name}}</div>
                      <div>Position: {{position}}</div>
                      <div>Department: {{department}}</div>
                    </li>
                    <hr>
                    <div>
                      <h4><em>Projects:</em></h4>
                      {{#with projects.[0]}}
                      <ul>
                        <li class="mb-4">
                          <div><b>{{name}}</b></div>
                          <div>Description: {{description}}</div>
                          <div>Status: {{status}}</div>
                        </li>
                        <hr>

                        <div>
                          <h4><em>Teams:</em></h4>
                          {{#with teams.[0]}}
                            <ul>
                              <li>
                                <div>Name team: <u>{{team_name}}</u></div>
                                <div class="mb-4">
                                  {{#with team_leader}}
                                    <div>{{title}}:</div>
                                      <ul>
                                        <li>
                                          <div>{{name}}</div>
                                          <div><a  href="{{email}}" target="_blank">{{email}}</a></div>
                                        </li>
                                      </ul>
                                  {{/with}}
                                </div>
                                <hr>

                                <div>
                                  <h4><em>Team members:</em></h4>
                                  {{#with team_members.[0]}}
                                    <ul>
                                      <li class="mb-4">
                                        <div><b>{{name}}</b></div>
                                        <div>{{title}}</div>
                                        <div><a href="{{email}}" target="_blank">{{email}}</a></div>
                                        <div>Skills: {{skills}}</div>
                                      </li>
                                      <hr>

                                      <div>
                                        <h4><em>Projects:</em></h4>
                                        {{#with projects.[0]}}
                                          <div class="mb-4">
                                            <ul>
                                              <li>
                                                <div><b>{{name}}</b></div>
                                                <div>Description: {{description}}</div>
                                              </li>
                                            </ul>
                                          </div>

                                          <div class="mb-4">
                                            <h4><em>Technologies:</em></h4>
                                            {{#each technologies}}
                                              <ul>
                                                <li>{{this}}</li>
                                              </ul>
                                            {{/each}}
                                          </div>

                                          <div>
                                            <h4><em>Team members:</em></h4>
                                            {{#each team_members}}
                                            <div class="mb-3">
                                              <ul>
                                                <li>
                                                  <div>Name: {{name}}</div>
                                                  <div>Title: {{title}}</div>
                                                </li>
                                              </ul>
                                            </div>
                                            {{/each}}
                                            <hr>
                                          </div>
                                        {{/with}}
                                      </div>
                                    </ul>
                                  {{/with}}
                                </div>
                              </li>
                            </ul>
                          {{/with}}
                        </div>
                      </ul>
                      {{/with}}
                    </div>
                  </ul>
                {{/with}}
              </div>
            </ul>
          {{/with}}
        </div>

        
      {{/with}}
    </div>


  {{/with}}
</div>