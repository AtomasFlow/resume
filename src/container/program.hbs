<div>
  {{#with program}}
    {{#with excursion}}
      <h1 class="mb-4">Excursion</h1>
      <hr>
      <h2 class="mb-4">{{name}}</h2>
      <h3><em>Location:</em></h3>
      {{#with location}}
        <ul>
          <li class="mb-4">
            <div>{{city}} / {{country}}</div>
            <div><u>Date: {{../date}}</u></div>
          </li>
          <hr>
        </ul>
      {{/with}}

      <div>
        <h3><em>Program:</em></h3>
        {{#with program}}
          {{#with [0]}}
            <ul class="mb-4">
              <li class="mb-4">
                <div>{{name}}</div>
                <div>Type: {{type}}</div>
                <div>Duration: {{duration}} hours</div>
              </li>
              <hr><hr>

              <div>
                <h2 class="my-5"><em>Details:</em></h2> <hr>
                <ul>
                {{#with details}}
                  <div>
                    {{#with museum}}
                      <div class="mb-4"><h3><em>Museum:</em></h3> <u>{{name}}</u></div>
                      <div>
                        <ul>
                          <h4 class="mb-2"><em>Location:</em></h4>
                          {{#with location}}
                            <address class="mb-4">
                              <ul>
                                <li>
                                  <div>{{address}} // {{city}} // {{country}}</div>
                                </li>
                              </ul>
                            </address>
                            <hr>
                          {{/with}}

                          <div class="mb-5">
                            <h4><em>Exhibits:</em></h4>
                            {{#with exhibits}}
                              <div class="mb-4">
                                {{#with [0]}}
                                  <ul>
                                    <li>
                                      <div>{{name}}</div>
                                      <div>{{artist}}</div>
                                      <div>{{description}}</div>

                                      {{#if audio_guide}}
                                        <div>{{audio_guide}}</div>
                                      {{/if}}

                                    </li>
                                  </ul>
                                {{/with}}
                              </div>

                              <div>
                                {{#with [1]}}
                                  <ul>
                                    <li>
                                      <div>{{name}}</div>

                                      {{#if artist}}
                                        <div>{{artist}}</div>
                                      {{/if}}

                                      <div>{{description}}</div>
                                      
                                      {{#if audio_guide}}
                                        <div>{{audio_guide}}</div>
                                      {{/if}}
                                    </li>
                                  </ul>
                                {{/with}}
                              </div>
                            {{/with}}
                          </div> <hr>
                        </ul>
                      </div> 

                    {{/with}}
                  </div>

                  <div class="mb-4">
                    {{#with guide}}
                      <h3><em>Guide:</em></h3>
                      <ul>
                        <li>
                          <div>Name: {{name}}</div>
                          <div>Language: {{language}}</div>
                          <div>Rating: {{rating}}</div>
                        </li> 
                      </ul> 
                    {{/with}}
                  </div><hr>
                {{/with}}
                </ul>
              </div>
            </ul>
          {{/with}}

          <div>
            {{#with [1]}}
              <ul>
                <h3><em>Show:</em></h3>
                  <ul>
                    <li class="mb-4">
                      <div>{{name}}</div>
                      <div>{{type}}</div>
                      <div>Duration: {{duration}} hours</div>
                    </li> <hr>

                    <div>
                      <h4><em>Details:</em></h4>
                      {{#with details}}
                        {{#with venue}}
                          <ul>
                            <li class="mb-4">
                              <div>{{name}}</div>
                            </li>

                            <div>
                              <h4 ><em>Location:</em></h4>
                              {{#with location}}
                              <address>
                                  <ul>
                                    <li>
                                      <div>{{address}} // {{city}} // {{country}}</div>
                                    </li>
                                  </ul> <hr>
                                </address>
                              {{/with}}
                            </div>
                          </ul>
                        {{/with}}

                        <div>
                          {{#with performers}}
                            <div class="mb-3">
                              {{#with [0]}}
                                <h4 class="mb-4"><em>Performers:</em></h4>
                                <ul>
                                  <li>
                                    <div><u>{{name}}</u></div>
                                    <div>{{type}}</div>
                                  </li>
                                </ul>
                              {{/with}}
                            </div>

                            <div class="mb-4">
                              {{#with [1]}}
                                <ul>
                                  <li>
                                    <div><u>{{name}}</u></div>
                                    <div>{{type}}</div>
                                  </li>
                                </ul>
                              {{/with}}
                            </div>
                          {{/with}}
                        </div> <hr>

                        <div class="mb-4">
                          <h4 class="mb-3"><em>Guide:</em></h4>
                          {{#with guide}}
                            <ul>
                              <li>
                                <div>Name: {{name}}</div>
                                <div>Language: {{language}}</div>
                                <div>Rating: {{rating}}</div>
                              </li>
                            </ul>
                          {{/with}}
                        </div> <hr>
                      {{/with}}
                    </div>
                  </ul>
              </ul>
            {{/with}}
          </div>
        {{/with}}
      </div>
    {{/with}}
  {{/with}}
</div>